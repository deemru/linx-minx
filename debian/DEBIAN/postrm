#!/bin/bash
set -e

if [ "$1" = "remove" ] || [ "$1" = "purge" ]; then
    if [ -f /etc/systemd/system/linx-minx.service ]; then
        rm -f /etc/systemd/system/linx-minx.service
        systemctl daemon-reload
    fi
fi

if [ "$1" = "purge" ]; then
    if id -u linx-minx > /dev/null 2>&1; then
        userdel -r linx-minx >/dev/null 2>&1 || true
    fi
    rm -rf /var/lib/linx-minx
fi

exit 0
